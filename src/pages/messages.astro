<!-- DaisyUI Messages Page -->
---
import DefaultLayout from '../layouts/DefaultLayout.astro'
import EmpyState from '../components/EmpyState.astro'
import { Modal } from 'accessible-astro-components'
---

<DefaultLayout title="Messages">
  <section class="p-6">
    <h1 class="text-3xl font-bold">Messages</h1>
    <p class="text-lg mt-2">Lorem ipsum dolor sit amet.</p>
  </section>

  <section class="mt-8">
    <div class="p-6 bg-base-100 shadow-lg rounded-lg">
      <h2 class="text-2xl font-semibold">Messages overview</h2>
      <EmpyState>
        <p class="text-gray-500">You haven't added any messages yet. Start by adding some.</p>
      </EmpyState>
      <button id="modal-trigger" class="btn btn-secondary mt-4">Add your first message</button>
      <Modal
        triggerId="modal-trigger"
        title="Add message"
        closeText="Cancel"
      >
        <p class="text-gray-700">You can use this component to include a form that adds a new message to the list.</p>
      </Modal>
    </div>
  </section>
</DefaultLayout>
