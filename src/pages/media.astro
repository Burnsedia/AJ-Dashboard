<!-- DaisyUI Media Page -->
---
import DefaultLayout from '../layouts/DefaultLayout.astro'
import { Media, Modal, Pagination } from 'accessible-astro-components'
---

<DefaultLayout title="Media">
  <section class="p-6">
    <h1 class="text-3xl font-bold">Media</h1>
    <p class="text-lg mt-2">Lorem ipsum dolor sit amet.</p>
  </section>

  <section class="mt-8">
    <div class="p-6 bg-base-100 shadow-lg rounded-lg">
      <div class="flex justify-between items-center mb-4">
        <h2 class="text-2xl font-semibold">Media overview</h2>
        <p class="text-gray-500"><em>Results: 1-6 of 24</em></p>
      </div>
      <button id="modal-trigger" class="btn btn-secondary mb-4">Add new media item</button>
      <Modal
        triggerId="modal-trigger"
        title="Add media"
        closeText="Cancel"
      >
        <p class="text-gray-700">You can use this component to include a form that adds a new media item to the list.</p>
      </Modal>
      
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4">
        <Media class="rounded-lg shadow-md w-full h-64 object-cover" src="https://images.unsplash.com/photo-1446776811953-b23d57bd21aa?ixlib=rb-1.2.1&auto=format&fit=crop&w=2344&q=80" />
        <Media class="rounded-lg shadow-md w-full h-64 object-cover" src="https://images.unsplash.com/photo-1608178398319-48f814d0750c?ixlib=rb-1.2.1&auto=format&fit=crop&w=1758&q=80" />
        <Media class="rounded-lg shadow-md w-full h-64 object-cover" src="https://images.unsplash.com/photo-1454789548928-9efd52dc4031?ixlib=rb-1.2.1&auto=format&fit=crop&w=1760&q=80" />
        <Media class="rounded-lg shadow-md w-full h-64 object-cover" src="https://images.unsplash.com/photo-1590907047706-ee9c08cf3189?ixlib=rb-1.2.1&auto=format&fit=crop&w=1760&q=80" />
        <Media class="rounded-lg shadow-md w-full h-64 object-cover" src="https://images.unsplash.com/photo-1446941611757-91d2c3bd3d45?ixlib=rb-1.2.1&auto=format&fit=crop&w=1402&q=80" />
        <Media class="rounded-lg shadow-md w-full h-64 object-cover" src="https://images.unsplash.com/photo-1536697246787-1f7ae568d89a?ixlib=rb-1.2.1&auto=format&fit=crop&w=1287&q=80" />
      </div>
    </div>
    <div class="flex justify-center mt-8">
      <Pagination />
    </div>
  </section>
</DefaultLayout>
